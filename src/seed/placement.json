  "exercises": [
    {
      "id": "placement-ex1",
      "lessonId": "placement-diagnostic",
      "type": "cloze",
      "promptMd": "Complete with the correct present tense:\\n\\n**Yo ____ (estudiar) español en la universidad.**",
      "answer": "estudio",
      "accepted": [
        "re:^estudio$"
      ],
      "feedback": {
        "correct": "Yes — regular -ar verb in present yo.",
        "wrong": "It's the yo form: estudio.",
        "hints": [
          "Present tense -ar: o, as, a, amos, áis, an"
        ]
      },
      "meta": {
        "difficulty": "B1",
        "skills": [
          "write"
        ],
        "topic": "Present tense"
      }
    },
    {
      "id": "placement-ex2",
      "lessonId": "placement-diagnostic",
      "type": "translate",
      "promptMd": "Translate:\\n\\n**Aunque llueva, iremos.**",
      "answer": "Even if it rains, we will go",
      "accepted": [
        "re:even if it rains.*we will go"
      ],
      "feedback": {
        "correct": "Good — notice subjunctive llueva.",
        "wrong": "Focus on 'aunque' + subjunctive = 'even if ...'.",
        "hints": [
          "llueva = it rains (subjunctive)"
        ]
      },
      "meta": {
        "difficulty": "C1",
        "skills": [
          "read",
          "write"
        ],
        "topic": "Subjunctive nuance"
      }
    },
    {
      "id": "placement-ex3",
      "lessonId": "placement-diagnostic",
      "type": "mcq",
      "promptMd": "Which word best completes:\\n\\n**Se lo di ___ mi amiga.**",
      "options": [
        "por",
        "para",
        "a",
        "de"
      ],
      "answer": "a",
      "feedback": {
        "correct": "Correct — personal a marks the indirect object.",
        "wrong": "It's the personal 'a'.",
        "hints": [
          "Think: I gave it **to** my friend."
        ]
      },
      "meta": {
        "difficulty": "B1",
        "skills": [
          "read"
        ],
        "topic": "Personal a"
      }
    },
    {
      "id": "placement-ex4",
      "lessonId": "placement-diagnostic",
      "type": "short",
      "promptMd": "Write a connector suitable for formal writing that means **'however'**.",
      "answer": "sin embargo",
      "accepted": [
        "re:^sin\\s+embargo$"
      ],
      "feedback": {
        "correct": "Yes — sin embargo is the standard connector.",
        "wrong": "Hint: two words, often at sentence start.",
        "hints": [
          "Starts with 'sin'."
        ]
      },
      "meta": {
        "difficulty": "C1",
        "skills": [
          "write"
        ],
        "topic": "Connectors"
      }
    }
